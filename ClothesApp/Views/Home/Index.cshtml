@model IEnumerable<ClothesApp.Models.Product>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Grid</title>
    <!-- Bootstrap (already in _Layout) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f7f7f7;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .card {
            background-color: #fff;
            border: 1px solid #e0e0e0;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.05);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            display: flex;
            flex-direction: column;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
            }

            .card img {
                width: 100%;
                height: 180px;
                object-fit: cover;
                border-bottom: 1px solid #e0e0e0;
            }

        .card-body {
            padding: 20px;
            flex: 1;
        }

        .card-title {
            font-size: 1.4rem;
            font-weight: 600;
            color: #2c3e50;
        }

        .card-text {
            margin: 10px 0;
            color: #7f8c8d;
        }

        .card-footer {
            padding: 15px 20px;
            border-top: 1px solid #f0f0f0;
            background-color: #f9f9f9;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .btn {
            background-color: #3498db;
            color: #fff;
            border: none;
            padding: 10px 25px;
            border-radius: 50px;
            text-align: center;
            text-decoration: none;
            font-size: 0.9rem;
            font-weight: 500;
            transition: background-color 0.3s, box-shadow 0.3s;
        }

            .btn:hover {
                background-color: #2980b9;
                box-shadow: 0 4px 12px rgba(52, 152, 219, 0.4);
            }

        .price {
            font-size: 1.2rem;
            font-weight: bold;
            color: #27ae60;
        }

        .container {
            margin-top: 50px;
        }

        /* Customizing scrollbar for a modern feel */
        ::-webkit-scrollbar {
            width: 10px;
        }

        ::-webkit-scrollbar-thumb {
            background-color: #bdc3c7;
            border-radius: 10px;
        }

        ::-webkit-scrollbar-track {
            background-color: #ecf0f1;
        }

    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4 d-flex align-items-stretch">
                    <div class="card w-100">
                        @* Uncomment if there's an image *@
                        @* <img src="~/images/@item.ImageUrl" alt="@item.Name" /> *@
                        <div class="card-body">
                            <h3 class="card-title">@item.Name</h3>
                            <p class="card-text">@item.Description</p>
                            <p class="price">@item.Price.ToString("C")</p>
                        </div>
                        <div class="card-footer">
                            <a href="@Url.Action("Details", "Product", new { id = item.ProductID })" class="btn">
                                <i class="fas fa-info-circle"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
