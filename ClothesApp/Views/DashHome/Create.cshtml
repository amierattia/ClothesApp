@model ClothesApp.Models.Sale

@{
    ViewData["Title"] = "Create Sale";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ensure layout is modern as well
}

<h1 class="text-center mb-4">Create Sale</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg p-4 mb-5 bg-white rounded">
            <h4 class="text-center">Sale Information</h4>
            <hr />
            <form asp-action="Create" class="mt-4">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="UserID" class="form-label fw-bold"></label>
                    <input asp-for="UserID" class="form-control form-control-lg" placeholder="Enter User ID" />
                    <span asp-validation-for="UserID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ProductID" class="form-label fw-bold"></label>
                    <input asp-for="ProductID" class="form-control form-control-lg" placeholder="Enter Product ID" />
                    <span asp-validation-for="ProductID" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label fw-bold"></label>
                    <input asp-for="Quantity" class="form-control form-control-lg" placeholder="Enter Quantity" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TotalPrice" class="form-label fw-bold"></label>
                    <input asp-for="TotalPrice" class="form-control form-control-lg" placeholder="Enter Total Price" />
                    <span asp-validation-for="TotalPrice" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Date" class="form-label fw-bold"></label>
                    <input asp-for="Date" class="form-control form-control-lg" type="date" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-check-circle"></i> Create Sale
                    </button>
                </div>
            </form>
        </div>
        <div class="text-center mt-3">
            <a asp-action="Index" class="btn btn-link">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
