@model ClothesApp.Models.Sale

@{
    ViewData["Title"] = "Details";
}

<section>
    <div class="container mt-4">
        <h1 class="text-center">@ViewData["Title"]</h1>

        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sale Information</h4>
                <hr />

                <dl class="row">
                    <dt class="col-md-3 fw-bold">
                        @Html.DisplayNameFor(model => model.SaleID)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.SaleID)
                    </dd>

                    <dt class="col-md-3 fw-bold">
                        @Html.DisplayNameFor(model => model.UserID)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.UserID)
                    </dd>

                    <dt class="col-md-3 fw-bold">
                        @Html.DisplayNameFor(model => model.ProductID)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.ProductID)
                    </dd>

                    <dt class="col-md-3 fw-bold">
                        @Html.DisplayNameFor(model => model.Quantity)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.Quantity)
                    </dd>

                    <dt class="col-md-3 fw-bold">
                        @Html.DisplayNameFor(model => model.TotalPrice)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.TotalPrice)
                    </dd>

                    <dt class="col-md-3 fw-bold">
                        @Html.DisplayNameFor(model => model.Date)
                    </dt>
                    <dd class="col-md-9">
                        <time>@Html.DisplayFor(model => model.Date)</time>
                    </dd>
                </dl>
            </div>
        </div>

        <div class="mt-4">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ProductID">Edit</a>
            <a class="btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>
</section>
