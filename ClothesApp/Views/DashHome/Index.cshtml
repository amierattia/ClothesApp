@model ClothesApp.Models.DashHome

@{
    ViewData["Title"] = "Product List";
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}


<style>
    .custom-primary {
        background-color: #007BFF;
        color: white;
    }

    .custom-warning {
        background-color: #FFC107;
        color: white;
    }

    .custom-info {
        background-color: #17A2B8;
        color: white;
    }

    .custom-danger {
        background-color: #DC3545;
        color: white;
    }

    .table thead {
        background-color: #333333;
        color: white;
    }

    .table tbody tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .card {
        text-align: center;
        padding: 20px;
        margin: 10px;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .icon {
        font-size: 50px;
        color: #4CAF50;
    }

    .number {
        font-size: 30px;
        font-weight: bold;
    }
    a{
        text-decoration:none;
        color:black;
    }
</style>

<div class="container">
    <div class="row">
        <!-- Sales Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="icon">
                    <i class="bi bi-bar-chart-line-fill"></i> <!-- Sales icon -->
                </div>
                <h5>Sales</h5>
                <div class="number">@Model.SalesSum</div> <!-- Number of sales -->
            </div>
        </div>

        <!-- Orders Card -->
        <div class="col-md-4">
            <div class="card">
                <div class="icon">
                    <i class="bi bi-card-list"></i> <!-- Orders icon -->
                </div>
                <h5>Orders</h5>
                <div class="number">
                    @Model.OrderSum
                </div> <!-- Number of orders -->
            </div>
        </div>
        <a class="col-md-4" href="/Product/Index">
            <!-- Store Card -->
                <div class="card">
                    <div class="icon">
                        <i class="bi bi-shop"></i> <!-- Store icon -->
                    </div>
                    <h5>Store</h5>

                    <div class="number">@Model.ProducSum</div> <!-- Number of stores -->

                </div>
        </a>

    </div>
</div>

<p>
    <!-- Create button with custom color scheme -->
    <a asp-action="Create" class="btn custom-primary mb-3">
        <i class="bi bi-plus-circle"></i> Create New
    </a>
</p>

<!-- Responsive table with customized color for header and rows -->
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead style="background-color: #333; color: #fff;">
            <tr>
                <th>SaleID</th>
                <th>UserID)</th>
                <th>ProductID</th>
                <th>Quantity</th>
                <th>TotalPrice</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OSales)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.SaleID)</td>
                    <td>@Html.DisplayFor(modelItem => item.UserID)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProductID)</td>
                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                    <td>@Html.DisplayFor(modelItem => item.TotalPrice)</td>
                    <td>@Html.DisplayFor(modelItem => item.Date)</td>
                    <td>
                        <!-- Edit button with custom color -->
                        <a asp-action="Edit" asp-route-id="@item.ProductID" class="btn btn-sm custom-warning">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <!-- Details button with custom color -->
                        <a asp-action="Detailes" asp-route-id="@item.ProductID" class="btn btn-sm custom-info">
                            <i class="bi bi-eye"></i> Details
                        </a>
                        <!-- Delete button with custom color -->
                        <a asp-action="Delete" asp-route-id="@item.SaleID" class="btn btn-sm custom-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
